<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/subject"
            android:padding="10dp"/>

        <!-- Thông tin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtTenMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lập trình Android"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtMaMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã môn: AND101"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/txtTinChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tín chỉ: 3"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Nút sửa / xóa (ADMIN) -->
        <LinearLayout
            android:id="@+id/layoutAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="@android:color/transparent"
                android:contentDescription="Sửa"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="@android:color/transparent"
                android:contentDescription="Xóa"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
