<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".ActivityNhapDiem">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Nhập điểm"
        android:titleTextColor="@android:color/white" />

    <!-- FORM NHẬP ĐIỂM -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llNhapDiem"
        android:padding="12dp">

        <Spinner
            android:id="@+id/spMonHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/edtDiemGK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm giữa kỳ"
            android:background="@drawable/edit_edittext"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edtDiemCK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm cuối kỳ"
            android:background="@drawable/edit_edittext"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- DANH SÁCH ĐIỂM -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDiem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

</LinearLayout>
